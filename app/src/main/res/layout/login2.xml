<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff0f0f0" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingBottom="10.0dip"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.13"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:id="@+id/linelayout">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="22.0dip" >

                <ImageView
                    android:layout_width="66.0dip"
                    android:layout_height="66.0dip"
                    android:layout_gravity="center"
                    android:adjustViewBounds="false"
                    android:contentDescription="@null"
                    android:scaleType="centerCrop"
                    android:src="@drawable/setting_head_icon"
                    android:visibility="visible" />
            </FrameLayout>

            <EditText
                android:id="@+id/login_name"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:layout_marginLeft="12.0dip"
                android:layout_marginRight="12.0dip"
                android:layout_marginTop="15.0dip"
                android:background="@android:color/background_light"
                android:drawableLeft="@drawable/login_icon_account"
                android:drawablePadding="15dp"
                android:ems="10"
                android:hint="请输入账户"
                android:paddingBottom="2.0dip"
                android:paddingLeft="15.0dip"
                android:paddingRight="15.0dip"
                android:paddingTop="2.0dip"
                android:singleLine="true"
                android:textColorHint="#ff999999"
                android:textSize="16.0sp"
                android:inputType="textVisiblePassword" />

            <EditText
                android:id="@+id/login_pwd"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:layout_marginBottom="20.0dip"
                android:layout_marginLeft="12.0dip"
                android:layout_marginRight="12.0dip"
                android:layout_marginTop="20.0dip"
                android:background="@android:color/background_light"
                android:drawableLeft="@drawable/login_icon_password"
                android:drawablePadding="15dp"
                android:ems="10"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:paddingBottom="2.0dip"
                android:paddingLeft="15.0dip"
                android:paddingRight="15.0dip"
                android:paddingTop="2.0dip"
                android:singleLine="true"
                android:textColorHint="#ff999999"
                android:textSize="16.0sp" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="记住信息？"
                android:id="@+id/rememberMe"
                android:layout_marginLeft="15dp"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/btn_login"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:layout_marginLeft="12.0dip"
                android:layout_marginRight="12.0dip"
                android:background="#ffaa17ff"
                android:singleLine="true"
                android:text="登录"
                android:textColor="#ffffffff"
                android:textSize="18.0sp"
                android:layout_marginTop="12dp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务器配置"
                android:id="@+id/service_config"
                android:layout_marginLeft="10dp"
                android:layout_gravity="right" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>