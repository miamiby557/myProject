                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="60dp">

                        <Spinner
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:id="@+id/c_transportType" />
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="60dp">

                        <Spinner
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:id="@+id/c_calculateType" />
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="64dp">

                        <CheckBox
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/is_upstairs"
                                android:id="@+id/upstairs" android:checked="false"
                                android:textColor="@android:color/holo_purple"
                            android:layout_gravity="center" />
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="right">
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:text="更多选项..."
                            android:id="@+id/addition" />
                            </LinearLayout>
                    </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right">

                        <Button
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="@string/calculate"
                            android:id="@+id/c_calculate" />
                    </LinearLayout>

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">
                        <TableLayout android:layout_width="fill_parent"
                                     android:layout_height="fill_parent" android:id="@+id/carrierorder_calculate_table" android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp">

                            <TableRow
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:background="@android:color/holo_blue_dark" android:gravity="center">
                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="40dp"
                                        android:text="@string/calculate_result"
                                        android:id="@+id/textView12" android:layout_gravity="center" android:gravity="center"/>
                            </TableRow>
                        </TableLayout>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>