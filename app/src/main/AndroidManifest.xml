<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lnet.tmsapp" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />


    <application
        android:name=".application.ApplicationTrans"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <service android:name=".Service.LocationService" android:exported="true" android:enabled="true" />
        <activity
            android:name=".StartupActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity android:name=".ServiceConfigActivity" android:label="服务器配置"
            android:windowSoftInputMode="adjustUnspecified|stateHidden"
            android:theme="@android:style/Theme.Holo.Light"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".TransportOrderActivity" android:label="运输订单创建"
            android:windowSoftInputMode="adjustUnspecified|stateHidden"
            android:theme="@android:style/Theme.Holo.Light"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".CarrierOrderActivity" android:label="托运单创建"
            android:windowSoftInputMode="adjustUnspecified|stateHidden"
            android:theme="@android:style/Theme.Holo.Light"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".CodeScanActivity"
            android:windowSoftInputMode="adjustUnspecified|stateHidden"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".CaptureActivity"
            android:windowSoftInputMode="adjustUnspecified|stateHidden"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".ORCActivity"
            android:windowSoftInputMode="adjustUnspecified|stateHidden"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".TransportOrderListActivity" android:label="我的运输单"
            android:windowSoftInputMode="adjustUnspecified|stateHidden"
            android:theme="@android:style/Theme.Holo.Light"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".CarrierOrderListActivity" android:label="我的托运单"
            android:windowSoftInputMode="adjustUnspecified|stateHidden"
            android:theme="@android:style/Theme.Holo.Light"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".CarSendActivity" android:label="发车确认"
            android:windowSoftInputMode="adjustUnspecified|stateHidden"
            android:theme="@android:style/Theme.Holo.Light"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".CarBackActivity" android:label="回场确认"
            android:windowSoftInputMode="adjustUnspecified|stateHidden"
            android:theme="@android:style/Theme.Holo.Light"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".CarrierOrderAddOtherActivity" android:label="完善托运单"
            android:windowSoftInputMode="adjustUnspecified|stateHidden"
            android:theme="@android:style/Theme.Holo.Light"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".PaichedanActivity" android:label="我的派车单"
            android:windowSoftInputMode="adjustUnspecified|stateHidden"
            android:theme="@android:style/Theme.Holo.Light"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".PWDUpdateActivity" android:label="修改密码"
            android:windowSoftInputMode="adjustUnspecified|stateHidden"
            android:theme="@android:style/Theme.Holo.Light"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".TransportOrderDetailActivity" android:label="运输单明细"
            android:windowSoftInputMode="adjustUnspecified|stateHidden"
            android:theme="@android:style/Theme.Holo.Light"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".CarrierOrderDetailActivity" android:label="托运单明细"
            android:windowSoftInputMode="adjustUnspecified|stateHidden"
            android:theme="@android:style/Theme.Holo.Light"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
